<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activity_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amy.application2.ResultingActivity"
    android:screenOrientation="portrait">

    <SurfaceView
        android:id="@+id/backgroundimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />


    <ImageView
        android:id="@+id/receiver"
        android:layout_width="144dp"
        android:layout_height="141dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/shatter"
        android:layout_width="140dp"
        android:layout_height="190dp"
        android:layout_below="@+id/disappearer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp" />

    <com.example.amy.application2.Movable
        android:id="@+id/user_image"
        android:layout_width="140dp"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp" />

    <View
        android:id="@+id/destructor"
        android:layout_width="126dp"
        android:layout_height="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="156dp"
        android:visibility="invisible" />

    <View
        android:id="@+id/disappearer"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="40dp"
        android:paddingBottom="40dp"
        android:visibility="invisible"
        android:layout_alignParentLeft="true" />

    <View
        android:id="@+id/wall1"
        android:layout_width="56dp"
        android:layout_height="6dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/destructor"
        android:layout_marginStart="0dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp" />

    <View
        android:id="@+id/wall2"
        android:layout_width="56dp"
        android:layout_height="6dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/destructor"
        android:layout_marginEnd="0dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp" />

</RelativeLayout>